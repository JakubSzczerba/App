{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">

            <h3 class="mt-5">Wniosek: {{ proposal.name }}</h3>
            <div class="col-lg-6">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Rodzaj wniosku</td>
                        <td>{{ proposal.type }}</td>
                    </tr>
                    <tr>
                        <td>Opis</td>
                        <td>{{ proposal.description }}</td>
                    </tr>
                    <tr>
                        <td>Wybierz kwote</td>
                        <td>
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                            {{ form_label(form.value) }}
                            {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Zloz nowy wniosek" class="btn btn-success">
                            {{ form_end(form) }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}