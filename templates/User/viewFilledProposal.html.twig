{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-6">
                <br>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Nazwa wniosku</td>
                        <td>{{ proposal.proposal.name }}</td>
                    </tr>
                    <tr>
                        <td>Rodzaj wniosku</td>
                        <td>{{ proposal.proposal.type }}</td>
                    </tr>
                    <tr>
                        <td>Opis</td>
                        <td>{{ proposal.proposal.description }}</td>
                    </tr>
                    <tr>
                        <td>Pracownik</td>
                        <td>{{ proposal.users.username }} ({{ proposal.users.email }})</td>
                    </tr>
                    <tr>
                        <td>Data</td>
                        <td>{{ proposal.proposal.datetime|date('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <td>Wartosc</td>
                        <td>{{ proposal.proposal.value }}</td>
                    </tr>
                    <tr>
                        <td>Decyzja</td>
                        {% if proposal.decision == 'Zaakceptowany' %}
                            <td><span class="badge badge-pill badge-success">{{ proposal.decision }}</span></td>
                        {% elseif proposal.decision == 'Wymagana zmiana' %}
                            <td><span class="badge badge-pill badge-secondary">{{ proposal.decision }}</span></td>
                        {% elseif proposal.decision == 'Odrzucony' %}
                            <td><span class="badge badge-pill badge-danger">{{ proposal.decision }}</span></td>
                        {% elseif proposal.decision == 'Wymaga weryfiakcji' %}
                            <td><span class="badge badge-pill badge-dark">{{ proposal.decision }}</span></td>
                        {% else %}
                            <td><span class="badge badge-pill badge-info">{{ proposal.decision }}</span></td>
                        {% endif %}
                    </tr>
                    <tr>
                        <td>Informacja</td>
                        <td>{{ proposal.information }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}