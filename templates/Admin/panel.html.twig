{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="mt-5">Lista Wniosków</h1>
            <br>
            {% if proposals is defined %}
            <form action="{{ path('newProposal') }}" method="POST" class="form-horizontal">
                <button type="submit" class="btn btn-success">Nowy wniosek</button>
            </form>
            <br>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th><h6>LP</h6></th>
                    <th><h6>Nazwa wniosku</h6></th>
                    <th><h6>Rodzaj</h6></th>
                    <th><h6>Data</h6></th>
                    <th><h6>Status</h6></th>
                </tr>
                </thead>
                <tbody>
                    {% for proposals in proposals %}
                        <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ proposals.name }}</td>
                        <td>{{ proposals.type }}</td>
                        <td>{{ proposals.datetime|date('d-m-Y') }}</td>
                         {% if proposals.activity == 1 %}
                             <td>
                                 <form action="{{ path('offStatus', {id: proposals.id}) }}" method="POST" class="form-horizontal">
                                     <button type="submit" class="btn btn-danger">Dezaktywuj</button>
                                 </form>
                             </td>
                         {% elseif proposals.activity == 0 %}
                             <td>
                                 <form action="{{ path('onStatus', {id: proposals.id}) }}" method="POST" class="form-horizontal">
                                     <button type="submit" class="btn btn-success">Aktywuj</button>
                                 </form>
                             </td>
                             {% else %}
                         {% endif%}
                            <td>
                                <a href="{{ path('editProposal', {id: proposals.id}) }}">Edytuj</a>
                                <a class="remove" href="{{ path('removeProposal', {id: proposals.id}) }}" onclick="return confirm('Jesteś pewny?')"><span style="color: red">Usuń</span></a>
                            </td>
                    {% endfor %}
                </tbody>
                </table>
            {% else %}
                <form action="{{ path('newProposal') }}" method="POST" class="form-horizontal">
                    <h3>Brak utworzonych wniosków</h3><br>
                    <button type="submit" class="btn btn-success">Nowy wniosek</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}